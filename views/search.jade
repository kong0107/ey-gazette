extends layout

block content
	header: h1= pageTitle
	em 共 #{count} 筆
	if count > ipp
		form.pagination
			if page > 1
				.prevPage: a(href='/search?q='+search+'&page='+(page-1)) 上一頁
			.pageSelector
				input(type='hidden', name='q', value=search)
				| 第
				select(name='page', onchange='this.form.submit()')
					- var p = 0
					while p < (count / ipp)
						- ++p
						option(selected=(p==page))= p
				| 頁
			if page < count / ipp
				.nextPage: a(href='/search?q='+search+'&page='+(page+1)) 下一頁
	each doc in docs
		article.articleListItem
			a(href=doc.GazetteHTML)
				span.PubGovName= doc.PubGovName.join(';')
				span.GazetteId= doc.GazetteId
			h2: a(href='/article/'+doc.MetaId)= doc.Title
			time= doc.Date_Created
